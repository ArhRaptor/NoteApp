<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcv_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d_16dp"
    android:layout_marginStart="@dimen/d_16dp"
    android:layout_marginEnd="@dimen/d_16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_8dp"
            android:layout_marginTop="@dimen/d_8dp"
            tools:text="Posted 25/02/2022"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_8dp"
            android:layout_marginTop="@dimen/d_8dp"
            android:text="@string/title"
            android:textSize="@dimen/d_22sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_8dp"
            android:layout_marginTop="@dimen/d_8dp"
            android:layout_marginEnd="@dimen/d_8dp"
            tools:text="some title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_8dp"
            android:layout_marginTop="@dimen/d_8dp"
            android:text="@string/description"
            android:textSize="@dimen/d_22sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/d_8dp"
            tools:text="We are a young startup from Paris looking for a designer who can help us design a tech oriented application. We are open to proposals."/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>